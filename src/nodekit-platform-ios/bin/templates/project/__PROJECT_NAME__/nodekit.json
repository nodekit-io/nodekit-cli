{
    "$xmlns": "http://www.w3.org/ns/widgets",
    "$id": "com.example.hello",
    "$version": "2.0.0",
    "name": "NodeKitSample",
    "description": "A sample NodeKit application",
    "author": {
        "value": "NodeKit Team",
        "$href": "http://nodekit.io",
        "$email": "admin@nodekit.io"
    },
    "content": {
        "$src": "index.html"
    },
    "access": {
        "$origin": "*"
    },
    "allow-intent": [
        {
            "$href": "http://*/*"
        },
        {
            "$href": "https://*/*"
        },
        {
            "$href": "tel:*"
        },
        {
            "$href": "sms:*"
        },
        {
            "$href": "mailto:*"
        },
        {
            "$href": "geo:*"
        },
        {
            "$href": "itms:*"
        },
        {
            "$href": "itms-apps:*"
        }
    ],
    "preference": [
        {
            "$name": "AllowInlineMediaPlayback",
            "$value": "false"
        },
        {
            "$name": "BackupWebStorage",
            "$value": "cloud"
        },
        {
            "$name": "DisallowOverscroll",
            "$value": "false"
        },
        {
            "$name": "EnableViewportScale",
            "$value": "false"
        },
        {
            "$name": "KeyboardDisplayRequiresUserAction",
            "$value": "true"
        },
        {
            "$name": "MediaPlaybackRequiresUserAction",
            "$value": "false"
        },
        {
            "$name": "SuppressesIncrementalRendering",
            "$value": "false"
        },
        {
            "$name": "SuppressesLongPressGesture",
            "$value": "false"
        },
        {
            "$name": "Suppresses3DTouchGesture",
            "$value": "false"
        },
        {
            "$name": "GapBetweenPages",
            "$value": "0"
        },
        {
            "$name": "PageLength",
            "$value": "0"
        },
        {
            "$name": "PaginationBreakingMode",
            "$value": "page"
        },
        {
            "$name": "PaginationMode",
            "$value": "unpaginated"
        }
    ],
    "feature": [
        {
            "$name": "LocalStorage",
            "param": {
                "$name": "ios-package",
                "$value": "CDVLocalStorage"
            }
        },
        {
            "$name": "HandleOpenUrl",
            "param": [
                {
                    "$name": "ios-package",
                    "$value": "CDVHandleOpenURL"
                },
                {
                    "$name": "onload",
                    "$value": "true"
                }
            ]
        },
        {
            "$name": "IntentAndNavigationFilter",
            "param": [
                {
                    "$name": "ios-package",
                    "$value": "CDVIntentAndNavigationFilter"
                },
                {
                    "$name": "onload",
                    "$value": "true"
                }
            ]
        },
        {
            "$name": "GestureHandler",
            "param": [
                {
                    "$name": "ios-package",
                    "$value": "CDVGestureHandler"
                },
                {
                    "$name": "onload",
                    "$value": "true"
                }
            ]
        }
    ]
}