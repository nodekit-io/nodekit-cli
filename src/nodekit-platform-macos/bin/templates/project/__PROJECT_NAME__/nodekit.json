{
    "$id": "com.example.hello",
    "$version": "0.0.1",
    "$xmlns": "http://w3.org/ns/widgets",
    "$xmlns:cdv": "http://nodekit.io/ns/1.0",
    "preference": [
        {
            "$name": "AllowInlineMediaPlayback",
            "$value": "false"
        },
        {
            "$name": "AutoHideSplashScreen",
            "$value": "true"
        },
        {
            "$name": "BackupWebStorage",
            "$value": "cloud"
        },
        {
            "$name": "DisallowOverscroll",
            "$value": "false"
        },
        {
            "$name": "EnableViewportScale",
            "$value": "false"
        },
        {
            "$name": "FadeSplashScreen",
            "$value": "true"
        },
        {
            "$name": "FadeSplashScreenDuration",
            "$value": ".25"
        },
        {
            "$name": "KeyboardDisplayRequiresUserAction",
            "$value": "true"
        },
        {
            "$name": "MediaPlaybackRequiresUserAction",
            "$value": "false"
        },
        {
            "$name": "ShowSplashScreenSpinner",
            "$value": "true"
        },
        {
            "$name": "SuppressesIncrementalRendering",
            "$value": "false"
        },
        {
            "$name": "TopActivityIndicator",
            "$value": "gray"
        },
        {
            "$name": "GapBetweenPages",
            "$value": "0"
        },
        {
            "$name": "PageLength",
            "$value": "0"
        },
        {
            "$name": "PaginationBreakingMode",
            "$value": "page"
        },
        {
            "$name": "PaginationMode",
            "$value": "unpaginated"
        },
        {
            "$name": "OSXLocalStoragePath",
            "$value": "~/Library/Application Support/__PROJECT_NAME__"
        },
        {
            "$name": "WindowSize",
            "$value": "auto"
        },
        {
            "$name": "HideMousePointer",
            "$value": "1"
        }
    ],
    "name": "__PROJECT_NAME__",
    "copyright": "__ORGANIZATION_NAME__",
    "description": "A sample NodeKit application",
    "author": {
        "value": "NodeKit Team",
        "$href": "http://nodekit.io",
        "$email": "admin@nodekit.io"
    },
    "content": {
        "$src": "index.html"
    },
    "access": {
        "$origin": "*"
    }
}